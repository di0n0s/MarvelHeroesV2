<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_item_marvel_comic_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_marvel_comic_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_marvel_comic_image_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="MarvelComic Name"/>

    <TextView
        android:id="@+id/list_item_marvel_comic_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_marvel_comic_image_view"
        android:layout_below="@id/list_item_marvel_comic_title_text_view"
        android:padding="4dp"
        tools:text="MarvelComic Description"/>

</RelativeLayout>