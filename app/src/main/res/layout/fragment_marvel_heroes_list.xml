<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MarvelHeroesListFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/looking_for"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/looking_for_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/looking_for_name"
        android:padding="4dp"
        android:singleLine="true"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/heroe_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="net.opentrends.marvelheroes.MarvelHeroesListFragment">



    </android.support.v7.widget.RecyclerView>

</LinearLayout>